{
	"name": "{{name}}",
	"description": "{{description}}",
	"version": "{{version}}",
	"license": "{{license}}",
	"author": {
		"name": "{{authorName}}",
		"email": "{{authorEmail}}",
		"url": "{{authorUrl}}"
	},
	"keywords": ["{{name}}", "{{authorName}}", "ghost", "ghost-theme"],

	"scripts": {
		"start": "postcss ./assets/css/tailwind.css -o ./assets/build/tailwind.css --minify --watch",
