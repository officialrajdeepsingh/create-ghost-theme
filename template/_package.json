	},
	"screenshots": {
		"desktop": "assets/hello-world-thumb.png"
	},
	"config": {
		"image_sizes": {
			"xxs": {
				"width": 30
			},
			"xs": {
				"width": 100
			},
			"s": {
				"width": 300
			},
			"m": {
				"width": 600
			},
			"l": {
				"width": 1000
			},
			"xl": {
				"width": 2000
			}
		},
		"posts_per_page": 10,
		"card_assets": true
	}
